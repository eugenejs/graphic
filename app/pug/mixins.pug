mixin site_item(site_number,site_name)
	.site(class=site_number)
		.site__content
			h3=site_name
			button.btn Перейти на сайт
				i.fas.icon-arrow-right

mixin link_lock(href,link)
	li
		a(href=href onclick="return false;")=link

mixin link(href,link)
	li
		a(href=href)=link

mixin nav_link(href,link)
	li
		a.navigation__link(href=href)=link
